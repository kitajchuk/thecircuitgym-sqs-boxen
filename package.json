{
  "name": "thecircuitgym-sqs-boxen",
  "version": "0.2.0",
  "description": "Website for The Circuit Bouldering Gym.",
  "author": "Brandon Lee Kitajchuk",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "start": "npm run sqs:setup",
    "poststart": "npx concurrently \"npm run watch:js\" \"npm run watch:sass\" \"npm run sqs:server:auth\"",
    "scaffold": "node ./scripts/scaffold",
    "build": "npm run sqs:assemble ; npm run scaffold ; npm run build:sass ; npm run build:js",
    "build:sass": "node-sass --output-style 'compressed' ./source/sass/screen.scss ./build/styles/screen.css",
    "build:js": "export NODE_ENV=production ; export NODE_OPTIONS=--openssl-legacy-provider ; npx webpack --env production",
    "watch:js": "export NODE_OPTIONS=--openssl-legacy-provider ; npx webpack --env sandbox --config webpack.config.js --watch",
    "watch:sass": "npx chokidar \"source/sass/**/*.scss\" -c \"npm run build:sass\"",
    "sqs:setup": "./node_modules/.bin/squarespace setup",
    "sqs:assemble": "./node_modules/.bin/squarespace assemble",
    "sqs:assemble:watch": "./node_modules/.bin/squarespace assemble --watch --trigger-reload",
    "sqs:server": "./node_modules/.bin/squarespace runserver --trigger-reload --verbose --faster-less",
    "sqs:server:auth": "./node_modules/.bin/squarespace runserver --auth --trigger-reload --verbose --faster-less",
    "sqs:deploy": "npm run build && npm run sqs:setup && ./node_modules/.bin/squarespace deploy"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:kitajchuk/thecircuitgym-sqs-boxen.git"
  },
  "dependencies": {
    "@squarespace/core": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.0",
    "@squarespace/toolbelt": "^0.10.6",
    "babel-loader": "^8.1.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.2.0",
    "css-loader": "^6.7.1",
    "eslint": "^7.20.0",
    "eslint-webpack-plugin": "^2.5.1",
    "fg-loadjs": "^1.0.0",
    "file-loader": "^6.0.0",
    "node-fetch": "^2.6.1",
    "node-sass": "^9.0.0",
    "open": "^7.4.0",
    "paramalama": "^0.3.0",
    "properjs-controller": "^0.3.1",
    "properjs-debounce": "^0.3.0",
    "properjs-hobo": "^0.3.26",
    "properjs-imageloader": "^0.4.0",
    "properjs-lager": "^0.1.2",
    "properjs-pagecontroller": "^0.5.0",
    "properjs-resizecontroller": "^0.3.0",
    "properjs-scrollcontroller": "^0.3.0",
    "svg-inline-loader": "^0.8.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  }
}
